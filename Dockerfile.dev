# Development Dockerfile with Hot Reload support
FROM mcr.microsoft.com/dotnet/sdk:8.0
WORKDIR /app

# Install dotnet watch tool (if not already installed)
RUN dotnet tool install --global dotnet-watch || dotnet tool update --global dotnet-watch || true
ENV PATH="${PATH}:/root/.dotnet/tools"

# Expose the port
EXPOSE 8080

# Set environment variables for development
ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Development
ENV DOTNET_USE_POLLING_FILE_WATCHER=true
ENV DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true

# Copy project file for initial restore (source code will be mounted as volume)
# This allows the container to restore packages even if source isn't mounted yet
COPY MedicalManagementSystem/*.csproj MedicalManagementSystem/

# Restore dependencies (will be re-run when source is mounted)
RUN dotnet restore MedicalManagementSystem/MedicalManagementSystem.csproj || true

# The source code will be mounted as a volume in docker-compose.yml
# Entrypoint will use dotnet watch for hot reload
WORKDIR /app

# Use dotnet watch for hot reload
# --no-launch-profile prevents reading launchSettings.json
# --urls sets the listening URL
CMD ["dotnet", "watch", "run", "--project", "MedicalManagementSystem/MedicalManagementSystem.csproj", "--urls", "http://+:8080", "--no-launch-profile", "--non-interactive"]

