@page "/admin/lab-tests"
@inject ILabTestService LabTestService
@rendermode InteractiveServer

<PageTitle>Laboratory - MMGC</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-earmark-medical"></i> Laboratory Management</h2>
        <button class="btn btn-primary"><i class="bi bi-plus-circle"></i> Book Test</button>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Test #</th>
                            <th>Patient</th>
                            <th>Test Name</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (labTests != null)
                        {
                            @foreach (var test in labTests)
                            {
                                <tr>
                                    <td>@test.TestNumber</td>
                                    <td>@test.Patient?.FullName</td>
                                    <td>@test.TestName</td>
                                    <td>@test.LabTestCategory?.Name</td>
                                    <td>@test.TestDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-@GetStatusColor(test.Status)">@test.Status</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"><i class="bi bi-upload"></i></button>
                                        <button class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private IEnumerable<LabTest>? labTests;

    protected override async Task OnInitializedAsync()
    {
        labTests = await LabTestService.GetAllLabTestsAsync();
    }

    private string GetStatusColor(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "In Progress" => "warning",
            "Booked" => "primary",
            _ => "secondary"
        };
    }
}
