@page "/admin/transactions"
@inject ITransactionService TransactionService
@rendermode InteractiveServer

<PageTitle>Transactions - MMGC</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt"></i> Transactions & Invoices</h2>
        <button class="btn btn-primary"><i class="bi bi-plus-circle"></i> New Transaction</button>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Patient</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Payment Mode</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (transactions != null)
                        {
                            @foreach (var transaction in transactions)
                            {
                                <tr>
                                    <td>@transaction.InvoiceNumber</td>
                                    <td>@transaction.Patient?.FullName</td>
                                    <td>@transaction.TransactionType</td>
                                    <td>â‚¹@transaction.TotalAmount.ToString("N2")</td>
                                    <td>@transaction.PaymentMode</td>
                                    <td>@transaction.TransactionDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge bg-@(transaction.Status == "Paid" ? "success" : "warning")">@transaction.Status</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary"><i class="bi bi-download"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private IEnumerable<Transaction>? transactions;

    protected override async Task OnInitializedAsync()
    {
        transactions = await TransactionService.GetAllTransactionsAsync();
    }
}
